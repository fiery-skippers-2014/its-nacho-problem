
<div id="results-container">
  <div class="row">
    <div>
      <ol class="large-block-grid-3 results">
      <% @recipe_objects.each_with_index do |recipe| %>
      <li>
        <ul id="recipes">
          <li><%= image_tag recipe[1].img_url %></li>
          <h6><li><%= recipe[1].name %></li></h6>
          <progress max="100" value ="<%= recipe[0] %>"></progress>
            <li><%= recipe[0] %>% Nacho Problem</li>
          <%= link_to "See more", "#", {:class => "see_more"} %>
          <div class='toggle hidden'>
            <li>Recipe Needs: <%= recipe[1].components%></li>
            <li>Missing Ingredients: <%= @top_recipes["#{recipe[1].name}"] %></li>
            <li><%= link_to "See Recipe", "#{recipe[1].recipe_url}" %></li>
            <%= form_for user_path(@user) do |f| %>
              <% hidden_field_tag 'user_favs[]', recipe[1].name, recipe[1].recipe_url %>
              <%= f.submit :value=> "Add to favorites" %>
            <% end %>
            <%#= link_to "Add to favorites", user_path(@user) %>
          <div>
        </ul>
      </li>
    <% end %>
      </ol>
    </div>
  </div>
</div>
</body>



