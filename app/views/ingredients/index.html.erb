    </div>
  </div>
</div>

<%= render partial: 'ingredients/notices' unless flash.nil? %>

<div class="row">
  <div class="large-6 columns pantry-container">
    <%= render partial: 'user_pantry' %>
  </div>
  <div class="large-6 columns search-result-container">
  </div>
</div>


