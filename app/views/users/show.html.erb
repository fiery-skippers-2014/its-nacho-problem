<%= @user.errors.full_messages.first if @user.errors.any? %>
<h3><%= current_user.username.titleize %>'s Favorite Recipes:</h3>
<hr>
<div class="favorites-page">
	<div class="row">
		<div class="small-6 large-centered columns clearfix">
			<%= link_to "Your Pantry", user_ingredients_path(current_user), :class => "button radius left" %>
			<%= link_to "All Recipes", user_nachoresult_path(current_user), :class => "button radius right" %>
		</div>
	</div>
	<div class="results" id="favorite_recipe_list">
		<div class="row">
			<%= render partial: 'favorites' %>
		</div>
	<%= paginate @user_favorites %>
	</div>
</div>