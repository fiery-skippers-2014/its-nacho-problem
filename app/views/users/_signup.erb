<h3>Sign Up:</h3>
<div class="sign-up">
    <%= form_for :user, url: users_path do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %><br>
      <%= f.label :email %>
      <%= f.email_field :email %><br>
      <%= label_tag :password %>
      <%= password_field_tag :password %><br>
      <%= label_tag :password_confirmation %>
      <%= password_field_tag :password_confirmation %><br>
      <%= f.submit 'Sign Up!' %>
    <% end %>
</div>
